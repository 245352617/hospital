FROM mcr.microsoft.com/dotnet/sdk:6.0-bullseye-slim AS restore
WORKDIR /source
COPY shared/YiJian.ECIS.Authorization/YiJian.ECIS.Authorization.csproj shared/YiJian.ECIS.Authorization/
COPY shared/YiJian.ECIS.Authorization/YiJian.ECIS.Authorization.csproj shared/YiJian.ECIS.Authorization/
COPY shared/YiJian.ECIS.Core/YiJian.ECIS.Core.csproj shared/YiJian.ECIS.Core/
COPY shared/YiJian.ECIS.ShareModel/YiJian.ECIS.ShareModel.csproj shared/YiJian.ECIS.ShareModel/
COPY shared/YiJian.ECIS.DDP/YiJian.ECIS.DDP.csproj shared/YiJian.ECIS.DDP/
COPY services/Recipe/src/YiJian.Recipe.EntityFrameworkCore/YiJian.Recipe.EntityFrameworkCore.csproj services/Recipe/src/YiJian.Recipe.EntityFrameworkCore/
COPY services/Recipe/src/YiJian.Recipe.Domain.Shared/YiJian.Recipe.Domain.Shared.csproj services/Recipe/src/YiJian.Recipe.Domain.Shared/
COPY services/Recipe/src/YiJian.Recipe.Domain/YiJian.Recipe.Domain.csproj services/Recipe/src/YiJian.Recipe.Domain/
COPY services/Recipe/src/YiJian.Recipe.Application/YiJian.Recipe.Application.csproj services/Recipe/src/YiJian.Recipe.Application/
COPY services/Recipe/src/YiJian.Recipe.Application.Contracts/YiJian.Recipe.Application.Contracts.csproj services/Recipe/src/YiJian.Recipe.Application.Contracts/
COPY services/Recipe/src/YiJian.Recipe.HttpApi/YiJian.Recipe.HttpApi.csproj services/Recipe/src/YiJian.Recipe.HttpApi/
COPY services/Recipe/host/YiJian.Recipe.HttpApi.Host/YiJian.Recipe.HttpApi.Host.csproj services/Recipe/host/YiJian.Recipe.HttpApi.Host/
RUN dotnet restore "services/Recipe/host/YiJian.Recipe.HttpApi.Host/YiJian.Recipe.HttpApi.Host.csproj"

FROM restore AS build
WORKDIR /source
COPY shared/. shared/
COPY services/Recipe/. services/Recipe/
RUN dotnet publish --no-restore -c Release -o /app services/Recipe/host/YiJian.Recipe.HttpApi.Host/YiJian.Recipe.HttpApi.Host.csproj


FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
RUN apt-get update && apt-get install -y curl
WORKDIR /app
COPY --from=build /app .
EXPOSE 80
EXPOSE 443
ENV TZ Asia/Shanghai
HEALTHCHECK --interval=5s --timeout=3s \
    CMD curl -sS -f http://localhost/api/ecis/recipe/health-check || exit 1
    
ENTRYPOINT [ "dotnet", "YiJian.Recipe.HttpApi.Host.dll" ]
